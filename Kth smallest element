class Solution{
    public static int kthSmallest(int[] arr, int l, int r, int k) 
    { 
        int arr1[]=new int[arr.length];
        for(int i=0;i<arr.length;i++){
            arr1[i]=arr[i];
        }
        Arrays.sort(arr1);
        int target=arr1[k-1];
       
        return target;
    } 
}

time complexity = O(nlogn)
